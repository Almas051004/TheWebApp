{% extends 'base.html.twig' %}

{% block title %}Авторизация - The App{% endblock %}

{% block body %}
<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">

    <div class="card shadow-lg border-0" style="max-width: 420px; width: 100%; border-radius: 16px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <h3 class="fw-bold">Авторизация в The Web App</h3>
            </div>

            {% if error %}
                <div class="alert alert-danger small">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_sign_in') }}" method="post">
                <div class="mb-4 position-relative">
                    <input type="email" id="username" name="_username" value="{{ last_username }}"
                           class="form-control form-control-lg ps-5" placeholder="E-mail" required autofocus>
                    <i class="bi bi-envelope position-absolute top-50 start-3 translate-middle-y text-muted"></i>
                    <div class="invalid-feedback"></div>
                </div>

                <div class="mb-4 position-relative">
                    <input type="password" id="password" name="_password"
                           class="form-control form-control-lg ps-5" placeholder="Пароль" required>
                    <i class="bi bi-lock position-absolute top-50 start-3 translate-middle-y text-muted"></i>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="remember">
                        <label class="form-check-label text-muted" for="remember">Запомнить меня</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill fw-semibold">
                    Войти
                </button>

                
                <input type="hidden" name="_target_path" value="/">
            </form>

            <div class="text-center mt-4">
                <p class="text-muted mb-2">
                    У вас нет аккаунта?
                    <a href="{{ path('app_register') }}" class="text-primary fw-medium text-decoration-none">Зарегистрироваться</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}